
<div class="container">
  <h1>Nouvelle Dose</h1>
  <div class="row">
    <div class="col-12">
      <%= simple_form_for [@cocktail, @dose] do |f|%>
      <%= f.input :description %>
      <%= f.input :ingredient_id, collection: Ingredient.all.order(:name), input_html: { class: 'select2' }%>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>